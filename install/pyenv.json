{
    "git-packages": [
        {
            "clone": "https://github.com/pyenv/pyenv.git $HOME/.pyenv"
        }
    ],
    "package-configs": [
        "export PYENV_ROOT=\"$HOME/.pyenv\"",
        "export PATH=\"$PYENV_ROOT/bin:$PATH\"",
        "eval (pyenv init -)"
    ],
    "post-install": [
        "pyenv install 3.7.3",
        "pyenv install 3.6.8",
        "pyenv global 3.7.3",
        "python -m pip install --upgrade pip",
        "pip install jedi neovim httpie"
    ]
}
